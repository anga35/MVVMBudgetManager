<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
   >

    <LinearLayout
        android:id="@+id/ll_total_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Total Income:"></TextView>

        <TextView
            android:id="@+id/tv_total_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:text=""></TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_total_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_total_income"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Total Expenses:"></TextView>

        <TextView
            android:id="@+id/tv_total_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:text=""></TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_total_funds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_total_expenses"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Total Funds Left:"></TextView>

        <TextView
            android:id="@+id/tv_funds_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_medium"
            android:textColor="#1E1E1E"
            android:textSize="21sp"
            android:text=" "></TextView>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="25dp"
        android:src="@drawable/ic_baseline_add_white_24"
        app:tint="@color/white"

        ></com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>